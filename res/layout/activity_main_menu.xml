<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_colour" >

    <Button
        android:id="@+id/button_sightseeing"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_button"
        android:text="@string/sightseeing"
        android:textColor="@color/Black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_touristAttraction"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/button_sightseeing"
        android:layout_marginLeft="32dp"
        android:background="@drawable/custom_button"
        android:text="@string/tourist_attraction"
        android:textColor="@color/Black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_thingsToDo"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button_sightseeing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:background="@drawable/custom_button"
        android:text="@string/things_to_do"
        android:textColor="@color/Black"
        android:textStyle="bold" 
        android:onClick="thingsToDo"/>

</RelativeLayout>
