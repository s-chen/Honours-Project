<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AttractionsInfo"
    android:background="@color/DarkBlue" >

  	<fragment
	    android:id="@+id/attractions_map"
	    android:layout_width="match_parent"
	    android:layout_height="250dp"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    class="com.google.android.gms.maps.MapFragment" />
  	
  	<TextView
	    android:id="@+id/textView_distance_info_attractions"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/attractions_map"
	    android:layout_below="@+id/attractions_map"
	    android:textColor="@color/White"
	    android:textSize="20sp"
	    android:textStyle="bold" />
  	
   	<Button
	    android:id="@+id/button_add_to_itinerary_attractions"
	    android:layout_width="wrap_content"
	    android:layout_height="55dp"
	    android:layout_alignBottom="@+id/button_search_attractions_info_online"
	    android:layout_alignRight="@+id/attractions_map"
	    android:text="@string/button_add_to_itinerary_planner"
       	android:textColor="@color/DarkRed"
        android:typeface="serif"
        android:textStyle="italic"
	    android:background="@drawable/custom_button"
	    android:layout_alignParentBottom="true"
	    android:onClick="itineraryAttraction" />

   	 <Button
	    android:id="@+id/button_search_attractions_info_online"
	    android:layout_width="wrap_content"
	    android:layout_height="55dp"
	    android:layout_alignBottom="@+id/textView_distance_info_attractions"
	    android:layout_alignLeft="@+id/textView_distance_info_attractions"
	    android:background="@drawable/custom_button"
	    android:onClick="searchAttractionsOnline"
	    android:text="@string/button_search_info_online"
       	android:textColor="@color/DarkRed"
        android:typeface="serif"
        android:textStyle="italic"
	    android:layout_alignParentBottom="true" />
   	
	 <TextView
	    android:id="@+id/textView_attractions_address_website_info"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/textView_distance_info_attractions"
	    android:layout_alignLeft="@+id/attractions_map"
	    android:textSize="20sp"
	    android:textStyle="bold"
	    android:autoLink="web" 
	    android:textColorLink="@color/White"
	    android:textColor="@color/White" />
   	 
</RelativeLayout>
