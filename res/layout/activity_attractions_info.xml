<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".attractionsInfo"
    android:background="@color/DarkBlue" >

  	<fragment
	    android:id="@+id/attractions_map"
	    android:layout_width="match_parent"
	    android:layout_height="250dp"
	   	android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    class="com.google.android.gms.maps.MapFragment" />
  	
  	<ScrollView 
  	    android:layout_width="fill_parent"
  	    android:layout_height="fill_parent"
  	    android:layout_below="@+id/attractions_map" >
  	    
  	    <RelativeLayout 
  	        android:layout_width="fill_parent"
  	        android:layout_height="wrap_content">
  	        
  	       	<TextView
	    		android:id="@+id/textView_distance_info_attractions"
	    		android:layout_width="match_parent"
	    		android:layout_height="wrap_content"
	    		android:textColor="@color/White"
	    		android:textSize="20sp"
	    		android:textStyle="bold" />
  	         	
  	     	<TextView
	    		android:id="@+id/textView_attractions_address_website_info"
	    		android:layout_width="match_parent"
	    		android:layout_height="wrap_content"
	    		android:layout_below="@+id/textView_distance_info_attractions"
	    		android:textSize="20sp"
	    		android:textStyle="bold"
	    		android:autoLink="web" 
	    		android:textColorLink="@color/White"
	    		android:textColor="@color/White" />
  	         		 
  	       	<RatingBar 
  	      		android:id="@+id/rating_bar"
  	       		android:layout_width="wrap_content"
  	          	android:layout_height="wrap_content"
  	         	android:layout_centerHorizontal="true"
  	         	android:numStars="5"
  	         	android:stepSize="1.0"
  	        	android:layout_below="@+id/textView_attractions_address_website_info"/>

  	     	<Button
  	        	android:id="@+id/button_add_to_itinerary_attractions"
  	        	android:layout_width="wrap_content"
  	        	android:layout_height="55dp"
  	        	android:layout_alignParentRight="true"
  	         	android:layout_below="@+id/rating_bar"
  	        	android:background="@drawable/custom_button"
  	         	android:onClick="itineraryAttraction"
  	         	android:text="@string/button_add_to_itinerary_planner"
  	         	android:textColor="@color/DarkRed"
  	         	android:textStyle="italic"
  	       	    android:typeface="serif" />

  	      	<Button
  	        	android:id="@+id/button_search_attractions_info_online"
  	         	android:layout_width="wrap_content"
  	         	android:layout_height="55dp"
  	         	android:layout_below="@+id/rating_bar"
  	        	android:background="@drawable/custom_button"
  	        	android:onClick="searchAttractionsOnline"
  	         	android:text="@string/button_search_info_online"
  	         	android:textColor="@color/DarkRed"
  	        	android:textStyle="italic"
  	         	android:typeface="serif" />
  	        
  	    </RelativeLayout>
  	    	 
	 </ScrollView>
	 
</RelativeLayout>
